@page
@model bus_transport_mgt_sys.Pages.Dashboards.Bus.CreateModel

@{
    ViewData["Title"] = "Create Bus";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Bus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .form-card {
            margin-top: 5%;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .form-control {
            border-radius: 8px;
        }
        .btn-primary {
            border-radius: 8px;
        }
        .btn-back {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-card bg-white">
                    <h2 class="text-center mb-4 text-primary">Add New Bus</h2>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Plate Number -->
                        <div class="mb-3">
                            <label asp-for="Bus.PlateNo" class="form-label">Plate Number</label>
                            <input asp-for="Bus.PlateNo" class="form-control" placeholder="Enter plate number" required />
                            <span asp-validation-for="Bus.PlateNo" class="text-danger"></span>
                        </div>

                        <!-- Number of Seats -->
                        <div class="mb-3">
                            <label asp-for="Bus.NoOfSeats" class="form-label">Number of Seats</label>
                            <input asp-for="Bus.NoOfSeats" class="form-control" placeholder="Enter number of seats" required />
                            <span asp-validation-for="Bus.NoOfSeats" class="text-danger"></span>
                        </div>

                        <!-- Bus Model -->
                        <div class="mb-3">
                            <label asp-for="Bus.Model" class="form-label">Bus Model</label>
                            <input asp-for="Bus.Model" class="form-control" placeholder="Enter bus model" required />
                            <span asp-validation-for="Bus.Model" class="text-danger"></span>
                        </div>

                        <!-- Route Dropdown -->
                        <div class="mb-3">
                            <label asp-for="Bus.RouteId" class="form-label">Route</label>
                            <select asp-for="Bus.RouteId" class="form-select" asp-items="ViewBag.RouteId">
                                <option value="" disabled selected>Select a route</option>
                            </select>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Create Bus</button>
                        </div>
                    </form>

                    <!-- Back Link -->
                    <div class="text-center btn-back">
                        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
