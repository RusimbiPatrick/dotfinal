@page
@model bus_transport_mgt_sys.Pages.Dashboards.Schedules.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Schedule.BusId" class="control-label"></label>
                <select asp-for="Schedule.BusId" class ="form-control" asp-items="ViewBag.BusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.DepartureTime" class="control-label"></label>
                <input asp-for="Schedule.DepartureTime" class="form-control" />
                <span asp-validation-for="Schedule.DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.ArrivalTime" class="control-label"></label>
                <input asp-for="Schedule.ArrivalTime" class="form-control" />
                <span asp-validation-for="Schedule.ArrivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Amount" class="control-label"></label>
                <input asp-for="Schedule.Amount" class="form-control" />
                <span asp-validation-for="Schedule.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
