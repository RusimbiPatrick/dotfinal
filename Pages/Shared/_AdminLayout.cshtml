<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bus Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 bg-light sidebar">
                <div class="py-4">
                    <h4 class="text-center">Admin Navigation</h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboards/Bus/Index">Bus Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboards/Drivers/Index">Driver Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboards/Tickets/Index">Ticket Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboards/Payments/Index">Payment Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboards/Stops/Index">Stops Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboards/Schedules/Index">Schedule Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboards/Routes/Index">Route Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboards/userMGT/Index">User Management</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <a class="navbar-brand" href="#">Admin Dashboard</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <span class="nav-link">Welcome, @Model.UserFullName</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-page-handler="Logout" class="d-inline">
                                    <button type="submit" class="btn btn-outline-dark">
                                        <i class="fa fa-sign-out"></i> Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </nav>

                <main>
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
